<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>

<ul class="list-group">
<% @cocktail.doses.each do |dose| %>
<div class="d-flex">
<li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "❌",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
</div>
<% end %>
</ul><br>
<%= link_to "Add a new Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to "Back to List", cocktails_path, class: "btn btn-primary" %>

</div>
</div>
</div>
